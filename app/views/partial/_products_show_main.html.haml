.show_main
  .show_content
    .show_name
      = @products.name
    .show_item_content
      .show_images
        .item_main_image
          = image_tag @productImages[0].image.url, height:300,width:300
        .item_sub_image
          - @productImages.each do |img|
            = image_tag img.image.url, height:60,width:60
      .show_contents
        .show_con1
          .show_sell_name
            出品者
          .show_sell_name_right
            .show_my_name
              = @products.user.nickname
        .show_con2
          .show_cate_name
            カテゴリー
          .show_cate_name_right
            = @products.category.name
        .show_con3
          .show_bra_name
            ブランド
          .show_bra_name_right
            = @products.brand.brand_name
        .show_con4
          .show_size_name
            サイズ
          .show_size_name_right
            = @products.size.size_name
        .show_con4
          .show_con_name
            商品の状態
          .show_con_name_right
            - case @products.state
              - when 0
                未使用
              - when 1
                使い込んでいる
        .show_con5
          .show_del_name
            配送料の負担
          .show_del_name_right
            - case @products.deliver_how
              - when 0
                ラクラクメルカリ便
              - when 1
                送料込み(出品者負担)
        .show_con6
          .show_del2_name
            配送の方法
          .show_del2_name_right
            - case @products.deliver_how
              - when 0
                ラクラクメルカリ便
              - when 1
                手渡し
        .show_con7
          .show_area_name
            配送元地域
          .show_area_name_right
            神奈川県
        .show_con8
          .show_day_name
            発送日の目安
          .show_day_name_right
            - case @products.deliverday
              - when 0
                1~2日で発送します
              - when 1
                3〜4日で発送します
    .show_price_box
      .show_price_bold
        .price2
          = @products.price
        .price2
          円
      .show_price_sub
        (税込)
      .show_price_dell
        送料込み
    .show_buy_btn
      =link_to "購入画面へ進む", new_product_buyer_path(@products)
    .show_txet_box
      = @products.explanation
      .show_mini_con
        .show_box_like
          .show_box_like1
            いいね!
            %i.fa.fa-heart-o#likes
          .show_box_like2
            いいね!
            %i.fa.fa-heart-o#likes
        .bad_item
          %i.fa.fa-flag
          不適切な商品の報告
        .show_key
          %i.fa.fa-lock
          あんしん・あんぜんへの取り組み