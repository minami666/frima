= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .undertw
    .undertw__form
      = f.email_field :email, autofocus: true, autocomplete: "email"
    .undertw__form2
      = f.password_field :password, autocomplete: "current-password"
    .undertw__robo
      .undertw__robo__check
      .undertw__robo__font
        私はロボットではありません
      .undertw__robo__ref
        = fa_icon "refresh", class: "rere"
        .undertw__robo__tit
          CAPTCHA
        .undertw__robo__kkk
          プライバシー･利用規約
    .undertw__in
      .undertw__in__ji
        = f.submit "ログイン"
    .undertw__pw
      = render "devise/shared/links"
  .shita
    %ul
      %li= link_to "プライバシーポリシー", '#'
      %li= link_to "メルカリ利用規約", '#'
      %li= link_to "特定商取引に関する表記", '#'
    .shita__link
      = link_to image_tag(src= "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?3296506464", class: "mercari-graylogo", height: 80, width: 60), "/"
      %p © Mercari, Inc.