.user_login
  .user_login_header
    = image_tag "sns_top.svg", size: "185x49"
  .user_login_body
    .user_login_text
      新規会員登録
    .user_login_sns
      .user_login_sns_1
        = fa_icon 'envelope', class: 'icon'
        .user_login_sns_1_a
          メールアドレスで登録する
      .user_login_sns_2
        = fa_icon 'facebook-square', class: 'icon'
        .user_login_sns_2_b
          = link_to "Facebookで登録する",user_facebook_omniauth_authorize_path do
      .user_login_sns_3
        = fa_icon 'google', class: 'icon'
        .user_login_sns_3_c
          = link_to "Googleで登録する",user_google_oauth2_omniauth_authorize_path do
  .user_login_bottom
    %ul.user_login_bottom_text
      %li= link_to "プライバシーポリシー","#"
      %li= link_to "メルカリ利用規約","#"
      %li= link_to "特定商取引に関する表記","#"
    .user_login_bottom_box
    .user_login_bottom_mozi
      © Mercari, Inc.