= render "partial/header"

.top_bar
  - breadcrumb :profile
  = breadcrumbs separator: " &rsaquo; ", class: "breadcrumbs-list"

.main_body
  = render "/mypages/partial/sidebar"
  .main_body__h
    .main_body__h__profile
      プロフィール
    .main_body__h__user
      .main_body__h__user__box
        = image_tag "/ユーザー.png"
      = form_for(current_user,url:{controller:'/mypages',action:'update',method:'PATCH'})  do |f|
        = f.text_field :nickname,class: "main_body__h__user__imput"
        .main_body__h__z
          = f.text_area :profile,class:" main_body__h__z__comment"
          = f.submit "変更する",class:"main_body__h__z__change"
= render "partial/banner"
= render "partial/footer"
