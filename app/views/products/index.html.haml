    = image_tag "/slide_1.webp",class: "image1"
    = image_tag "/slide_2.jpg",class: "image1"
  .favorite_categry
    新着アイテム
  .bay_btn
    出品
    %i.fa.fa-camera
  .product_box
    .categry_name
      商品一覧
      .show_link
    .product_show
      - @products.last(10).each do |product|
        = link_to "/products/#{product.id}" do
          .product_one
            .product_img
              = image_tag product.productsimages[0].image.url
              .price_one
                = "¥#{product.price}"
            .one_name_box
              .one_name
                = product.name
