.body
  .header
    .header__logo
      = link_to image_tag(src="sns_top.svg" ), root_path

    %nav.progress
      %ul.progress-bar
        %li.step1#done
          会員情報
          .progress-status
          .progress-status_bar
        %li.step2#done
          電話番号認証
          .progress-status
          .progress-status_bar
        %li.step3#active
          お届け先住所入力
          .progress-status
          .progress-status_bar
        %li.step4
          支払い方法
          .progress-status
          .progress-status_bar
        %li.step5
          完了
          .progress-status
          .progress-status_bar
  = form_for(@addresses, url: "/addresses/new", method: :get ) do |f|
    .signup
      .signup__title
        発送元・お届け先住所登録
      .signup__box
        .signup__box__input
          .field
            .field__info__family_name_knj
              %label{for: "family_name_knj" } お名前
              %span.form-require 必須
              %br
            .field__input
              = f.text_field :family_name_knj, class: "input-default", autocomplete: "family_name_knj", placeholder: "例）芽瑠"
              = f.text_field :first_name_knj, class: "input-default", autocomplete: "family_name_knj", placeholder: "例）加莉"
          .field
            .field__info__family_name_ktkn
              %label{for: "family_name_ktkn"} お名前カナ
              %span.form-require 必須
              %br
            .field__input
              = f.text_field :family_name_ktkn, class: "input-default", autocomplete: "family_name_ktkn", placeholder: "例）メル"
              = f.text_field :first_name_ktkn, class: "input-default", autocomplete: "family_name_ktkn", placeholder: "例）カリ"
          .field
            .field__info__postnum
              %label{for: "postnum"} 郵便番号
              %span.form-require 必須
              %br
            .field__input
              = f.text_field :postnum, class: "input-default", autocomplete: "postnum", placeholder: "例）123-4567"
          .field
            .field__info__prefecture
              %label{for: "prefecture"} 都道府県
              %span.form-require 必須
              %br
            .field__input 
              = f.collection_select :prefecture, Prefecture.all, :id, :name, prompt: "--", class: "input-default"
          .field
            .field__info__city
              %label{for: "city"} 市区町村
              %span.form-require 必須
              %br
            .field__input
              = f.text_field :city, class: "input-default", autocomplete: "city", placeholder: "例）横浜市緑区"
          .field
            .field__info__street_num
              %label{for: "street_num"} 番地
              %span.form-require 必須
            .field__input
              = f.text_field :street_num, class: "input-default", autocomplete: "street_num", placeholder: "例）青山1-1-1"
            .field
              .field__info__building
                %label{for: "building"} 建物名
                %span.form-require_1 任意
              .field__input
                = f.text_field :building, class: "input-default", autocomplete: "building", placeholder: "例）柳ビル103"
            .field
              .field__info__tel
                %label{for: "tel"} 電話
                %span.form-require_1 任意
              .field__input
            = f.text_field :tel, class: "input-default", autocomplete: "tel", placeholder: "例）09012345678"

          .next__btn
            = f.submit '次へ進む', class:"next-btn"
  .footer-user
    %ul
      %li= link_to "プライバシーポリシー", '#'
