              -# .field-input_4_4
              -# 年
          .field_4
            .field-info__security_num_4
              .field-input_4
              %label{for: "security_num"} セキュリティコード
              %span.form-require 必須
              = text_field_tag "cvc", "", class: "input-default", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
            .field-input_mozi_4
              %ul.gnav
                %li
                  = link_to "#" do
                    カードの裏面の番号とは？
                    %ul
                      %li
                        .iii
                        = link_to "#" do
                          カードの裏面をご参照ください。
                          = image_tag "seq-card.png", size: "242x111" 
            .field_4
            .next__btn_4
              #card_token
              = submit_tag "次へ進む", id: "token_submit", class:"next-btn_4"
  .footer-user_4
    %ul
      %li= link_to "プライバシーポリシー", '#'
      %li= link_to "メルカリ利用規約", '#'
      %li= link_to "特定商取引に関する表記", '#'
